@{
}
@model Product
<div class="card shadow border-0 mt-4 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2"></label>
                    <input asp-for="Description" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <input asp-for="ListPrice" disabled type="text" class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2"></label>
                    <input asp-for="Price100" type="text" disabled class="form-control border-0 shadow" />
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="index" class="btn btn-secondary form-control border">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
